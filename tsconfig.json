{
  "compilerOptions": {
    "target": "esnext",                          // Updated for modern JavaScript
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",               // Keep for App Router compatibility
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",                           // Keep for Next.js JSX handling
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
